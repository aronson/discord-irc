{
  "lint": {
    "include": ["lib/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true,
    "include": ["lib/", "README.md"]
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env=CONFIG_FILE,DEBUG,VERBOSE --allow-read=./ lib/index.ts",
    "prepare": "deno compile --allow-net --allow-env=CONFIG_FILE,DEBUG,VERBOSE --allow-read=./ lib/index.ts --output discord-irc",
    "prepareAndStart": "deno task prepare && ./discord-irc",
    "startPrepared": "./discord-irc"
  },
  "imports": {
    "dlog": "https://deno.land/x/dlog2@2.0/classic.ts",
    "irc": "https://deno.land/x/irc@v0.12.5/mod.ts",
    "harmony" : "https://raw.githubusercontent.com/harmonyland/harmony/main/mod.ts",
    "fs": "https://deno.land/std@0.200.0/fs/mod.ts",
    "path": "https://deno.land/std@0.200.0/path/mod.ts",
    "flags": "https://deno.land/std@0.200.0/flags/mod.ts"
  }
}
