{
  "lint": {
    "include": ["lib/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": true,
    "include": ["lib/", "README.md"]
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env=CONFIG_FILE,DEBUG,VERBOSE --allow-read lib/mod.ts",
    "prepare": "deno compile --allow-net --allow-env=CONFIG_FILE,DEBUG,VERBOSE --allow-read lib/mod.ts --output discord-irc",
    "prepareAndStart": "deno task prepare && ./discord-irc",
    "startPrepared": "./discord-irc"
  }
}
