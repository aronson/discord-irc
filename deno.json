{
  "compilerOptions": {
    "experimentalDecorators": true
  },
  "lint": {
    "include": ["lib/", "test/", "discord-irc.ts"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "lineWidth": 120,
    "semiColons": true,
    "singleQuote": true,
    "include": ["lib/", "test/", "discord-irc.ts", "README.md", "TODO.md"]
  },
  "tasks": {
    "start": "deno run --allow-env --allow-import --allow-net --allow-read --allow-write discord-irc.ts",
    "prepare": "deno compile --allow-env --allow-import --allow-net --allow-read --allow-write discord-irc.ts"
  },
  "test": {
    "include": ["test/"]
  },
  "lock": false,
  "imports": {
    "@henrygd/queue": "jsr:@henrygd/queue@^1.1.1",
    "@irc/client": "jsr:@irc/client@^0.17.2",
    "@std/fmt": "jsr:@std/fmt@^1.0.8"
  }
}
