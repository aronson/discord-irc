{
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "tasks": [
    {
      "type": "deno",
      "command": "run",
      "args": [
        "-A",
        "src/index.ts"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: run"
    }
  ],
  "imports": {
    "dlog": "https://deno.land/x/dlog2@2.0/classic.ts",
    "irc": "https://deno.land/x/irc@v0.12.5/mod.ts"
  }
}
