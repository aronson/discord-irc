{
  "lint": {
    "include": ["lib/", "discord-irc.ts"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "lineWidth": 120,
    "semiColons": true,
    "singleQuote": true,
    "include": ["lib/", "discord-irc.ts", "README.md", "TODO.md"]
  },
  "tasks": {
    "start": "deno run --allow-net --allow-env=CONFIG_FILE,DEBUG,VERBOSE --allow-read --allow-write discord-irc.ts",
    "prepare": "deno compile --allow-net --allow-env=CONFIG_FILE,DEBUG,VERBOSE --allow-read --allow-write discord-irc.ts"
  },
  "lock": false
}
